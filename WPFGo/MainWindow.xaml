<Window x:Class="WPFGo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFGo"
        mc:Ignorable="d"
        Title="MainWindow" Height="110" Width="240">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Viewbox Grid.Row="0" Grid.ColumnSpan="3">
            <TextBox BorderThickness="0" VerticalAlignment="Center"  x:Name="sliderNum" x:FieldModifier="public"  Margin="5" />
            <!--Text="{Binding ElementName=slider,Path=Value,UpdateSourceTrigger=PropertyChanged}"-->
        </Viewbox>

        <Viewbox Grid.Row="1" HorizontalAlignment="Left"  Grid.ColumnSpan="3">
            <Slider Width="240"  Name="slider" Margin="5"  Minimum="-10" Maximum="110"/>
        </Viewbox>

    </Grid>
</Window>
