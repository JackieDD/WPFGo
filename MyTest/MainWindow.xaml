<Window x:Class="MyTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyTest"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition MinWidth="50"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Text="磊哥大黑狗" VerticalAlignment="Center"/>
        <GridSplitter Grid.Row="1"  Grid.Column="1" ShowsPreview="false" Width="5" HorizontalAlignment="Center"/>
        <Rectangle Grid.Column="0" Grid.Row="1" Fill="AliceBlue"/>
        <Rectangle Grid.Column="2" Grid.Row="1" Fill="AntiqueWhite"/>
    </Grid>
</Window>
